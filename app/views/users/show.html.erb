<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h1>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Micropost (<%= @user.microposts.size %>) </h3>
      <ol class="micropost">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
